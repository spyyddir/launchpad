<div class="header">
  <h2 class="session">Sign in</h2>
  <%= link_to "Sign up", new_registration_path(resource_name), :class => "button right" %>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="grouping">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  

  <div class="grouping">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <p style="width: 200px; float: right"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <%= f.submit "Sign in", :class => "button", :id => "sign_in" %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), :style => "width: 200px; margin: 0 45px; font-size: 12px; float: right; text-align: right; color: #fff; text-decoration: none" %>
  
  <%= link_to "No confirmation email?", new_confirmation_path(resource_name), :style => "width: 200px; margin: 0 45px; font-size: 12px; float: right; text-align: right; color: #fff; text-decoration: none" %>
<% end %>