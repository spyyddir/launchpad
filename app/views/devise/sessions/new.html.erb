<div class="header">
  <h2 class="session">Sign in</h2>
  <%= link_to "Sign up", new_registration_path(resource_name), :class => "button right" %>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="grouping">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  

  <div class="grouping">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="grouping checkbox" style="width: 200px; float: right">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

  <%= f.submit "Sign in", :class => "button main_submit" %>
<% end %>

<%= render :partial => "devise/shared/links" %>